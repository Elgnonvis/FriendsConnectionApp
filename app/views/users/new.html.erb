<div class="panel panel-default">
    <div class="panel-heading"><h1>INSCRIPTION</h1> </div><br>
        <div class="panel-body">

            <%= form_with(model: @user, local: true, html: {class:'form-horizontal'}) do |f| %>
                <% if @user.errors.any? %>
                    <div class="alert alert-danger" role="alert">
                        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this 
                        <%= @user.name %> from being saved:</h2>
                        <ul>
                            <% @user.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                

                <div class="form-group">
                    <%= f.label :name, class: 'col-md-4 control-label' %><br>
                    <div class="col-md-6">
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                </div><br>

                <div class="form-group">
                    <%= f.label :email, class: 'col-md-4 control-label' %>
                    <div class="col-md-6">
                        <%= f.email_field :email, class: 'form-control' %>
                    </div><br>
                </div>

                <div class="form-group">
                    <%= f.label :password, class: 'col-md-4 control-label' %>
                    <div class="col-md-6">
                        <%= f.password_field :password, class: 'form-control' %>
                    </div>
                </div><br>

                <div class="form-group">
                    <%= f.label :password_confirmation, class: 'col-md-4 control-label' %>
                    <div class="col-md-6">
                        <%= f.password_field :password_confirmation, class: 'form-control' %>
                    </div>
                </div><br>

                <div class="col-md-6 col-md-offset-4">
                    <button class="btn btn-success" type="submit"> Cr√©er mon compte</button>
                </div>

            <% end %>
            <br>
        </div>
    </div>
</div>


     

 